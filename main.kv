<SetNicknameScreen>:
    FloatLayout:
        MDTextField:
            id: nickname
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "top": .575}
            hint_text: "nickname"
            required: True
            helper_text: "Enter text"
            multiline: False
              
        MDRaisedButton:
            text: "Set nickname"
            size_hint: .4 ,.05
            pos_hint: {"center_x": .75, "top": .45}
            on_release:
                root.setnickname(nickname.text)
